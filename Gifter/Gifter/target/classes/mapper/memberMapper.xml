<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.swdo.gift.dao.MemberMapper">
	
	<!--회원 가입-->
	<insert id="memberInsert" parameterType="member">
		insert into 
			gi_member(
			member_id	
			,member_pw
			,member_email
		)
		 values(
		 	#{member_id}
		 	,#{member_pw}
		 	,#{member_email}		 	
		 )		
	</insert>
	
	<!--로그인  -->
	<select id="memberLogin" parameterType="member" resultType="int">
		select
			count(*)
		from
			gi_member
		where
			member_id = #{member_id}
			and
			member_pw = #{member_pw}
			and
			member_key = 'Y'
	</select>
	
	<!--회원 인증키(난수 생성)-->
	<update id="GetKey" parameterType="map">
		update 
			gi_member
		set
			member_key = #{param2}
		where
			member_id = #{param1}
	</update>
	
	<!--회원 인증키 Y로 변경  -->
	<update id="alter_userKey">
		update 
			gi_member
		set
			member_key = 'Y'
		where
			member_id = #{param1}
		and
			member_key = #{param2}
	</update>
	
	<!--소셜로 로그인한 사람을 회원가입 시킴  -->
	<insert id="naverlMemberInsert" parameterType="member">
		insert into 
			gi_member(
			member_id	
			,member_pw
			,member_email
			,member_key
		)
		 values(
		 	#{member_id}
		 	,#{member_pw}
		 	,#{member_email}
		 	,#{member_key}		 	
		 )		
	</insert>
	
	
</mapper>
		